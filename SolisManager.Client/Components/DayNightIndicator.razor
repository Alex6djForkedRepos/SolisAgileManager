<MudIcon Icon="@DayNightIcon" Size="Size.Small" Style="@DayNightStyle" Title="@DayNightToolTip" />

@code {
    [Parameter]
    public bool Day { get; set; }

    private string DayNightIcon => Day ? Icons.Material.Filled.LightMode : Icons.Material.Filled.DarkMode;
    private string? DayNightStyle => Day ? "color: rgba(200,200,50, 0.5)" : "color: rgba(200,200,200, 0.5)";
    private string? DayNightToolTip => Day ? "Day" : "Night";
}